<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.masterpeps.mapcans2.Fragment.ForgotPasswordFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Add Display Name"
            android:id="@+id/textView3"
            android:layout_gravity="left"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            android:textSize="25sp"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/editText_addDetails"
            android:layout_gravity="center_horizontal"
            android:hint="Display name here."
            android:textColor="#99000000"
            android:textColorHint="#E6CCCCCC"
            android:textSize="18sp"
            android:padding="15dp"/>


        <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:text="Add Trashcan"
            android:textAllCaps="false"
            android:id="@+id/btn_addTrashcan"
            android:layout_gravity="center_horizontal"
            android:background="#4CAF50"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#FFF" />
    </LinearLayout>
</RelativeLayout>


